@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa-IR" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        @Html.Raw(ViewData["Title"])
    </title>
    @if (Model.IsHomePage)
    {
        <meta name="description" content="جستجو در شعر فارسی" />
    }
    else
    {
        <script type="application/ld+json">
        {
        @Html.Raw(@ViewData["BrearCrumpList"])
        }
        </script>
    }
    <link href="/dist/skin/blue.monday/css/jplayer.blue.monday.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/p5.css" rel="stylesheet" type="text/css" />
    <link href="/css/fab.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="search" type="application/opensearchdescription+xml" title="گنجور" href="https://ganjoor.net/search.xml" />
    <script>
        function wpopen(macagna) {
            window.open(macagna, '_blank', 'width=600,height=700,scrollbars=yes,status=yes');
        }
    </script>
</head>
<body>

    @if (Model.IsHomePage)
    {
        <div id="hdr">
            <h1><a href="/" title="گنجور"><img src="/image/gm.gif" alt="گنجور" style="width:auto;margin:auto;" /></a></h1>
        </div>

        <div id="fa">
            <h2>
                آثار سخنسرایان پارسی‌گو
            </h2>

            <div class="actionbox">
                <form action="https://ganjoor.net/index.php" method="get" id="searchhorm">
                    <label for="s">جستجو:</label>
                    <input type="text" name="s" id="s" class="inputText" size="35" value="" />
                    <select name="author" id="author">
                        <option value="0" selected="selected">در آثار همه شاعران</option>
                        @{
                            foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                            {
                                <option value="@poet.Id">@poet.Name</option>
                            }
                        }
                    </select>
                    <input type="submit" value="بیاب" />
                </form>
            </div>


            <div id="main">
                <div id="guides">
                    <div class="spacer">&nbsp;</div>

                    @{
                        foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                        {
                            <div class="poet"><a href="@poet.FullUrl" title="@poet.Name"><img src="/image/poets/@(poet.Id).png" alt="@poet.Name" /></a><div class="caption"><a href="@poet.FullUrl">@poet.Name</a></div></div>
                        }
                    }


                    <div class="spacer">&nbsp;</div>



                    @if (Model.LoggedIn)
                    {
                        <div class="fab">
                            <span class="fab-action-button">
                                <i class="fab-action-button__icon"></i>
                            </span>
                            <ul class="fab-buttons">
                                <li class="fab-buttons__item">
                                    <a href="#" class="fab-buttons__link" data-tooltip="Facebook">
                                        <i class="icon-material icon-material_fb"></i>
                                    </a>
                                </li>
