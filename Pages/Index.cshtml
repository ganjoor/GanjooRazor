@page
@model IndexModel
@{
    Layout = "Shared/_HomePage";
}

<div class="actionbox">
    <form action="https://ganjoor.net/index.php" method="get" id="searchhorm">
        <label for="s">جستجو:</label>
        <input type="text" name="s" id="s" class="inputText" size="35" value="" />
        <select name="author" id="author">
            <option value="0" selected="selected">در آثار همه شاعران</option>
            @{
                foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                {
                    <option value="@poet.Id">@poet.Name</option>
                }
            }
        </select>
        <input type="submit" value="بیاب" />
    </form>
</div>


<div id="main">
    <div id="guides">
        <div class="spacer">&nbsp;</div>

        @{
            foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
            {
                <div class="poet"><a href="@poet.FullUrl" title="@poet.Name"><img src="/image/poets/@(poet.Id).png" alt="@poet.Name" /></a><div class="caption"><a href="@poet.FullUrl">@poet.Name</a></div></div>
            }
        }


        <div class="spacer">&nbsp;</div>

      

        <div class="fab">
            <span class="fab-action-button">
                <i class="fab-action-button__icon"></i>
            </span>
            <ul class="fab-buttons">
                <li class="fab-buttons__item">
                    <a href="#" class="fab-buttons__link" data-tooltip="Facebook">
                        <i class="icon-material icon-material_fb"></i>
                    </a>
                </li>
                <li class="fab-buttons__item">
                    <a href="#" class="fab-buttons__link" data-tooltip="Twitter">
                        <i class="icon-material icon-material_tw"></i>
                    </a>
                </li>
                <li class="fab-buttons__item">
                    <a href="#" class="fab-buttons__link" data-tooltip="Linkedin">
                        <i class="icon-material icon-material_li"></i>
                    </a>
                </li>
                <li class="fab-buttons__item">
                    <a href="#" class="fab-buttons__link" data-tooltip="Google+">
                        <i class="icon-material icon-material_gp"></i>
                    </a>
                </li>
            </ul>
        </div>


    </div>

</div>
