@page
@model IndexModel
@{
    Layout = "Shared/_HomePage";
}

<div class="actionbox">
    <form action="https://ganjoor.net/index.php" method="get" id="searchhorm">
        <label for="s">جستجو:</label>
        <input type="text" name="s" id="s" class="inputText" size="35" value="" />
        <select name="author" id="author">
            <option value="0" selected="selected">در آثار همه شاعران</option>
            @{
                foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                {
                    <option value="@poet.Id">@poet.Name</option>
                }
            }
        </select>
        <input type="submit" value="بیاب" />
    </form>
</div>


<div id="main">
    <div id="guides">
        <div class="spacer">&nbsp;</div>

        @{
            foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
            {
                <div class="poet"><a href="@poet.FullUrl" title="@poet.Name"><img src="/image/poets/@(poet.Id).png" alt="@poet.Name" /></a><div class="caption"><a href="@poet.FullUrl">@poet.Name</a></div></div>
            }
        }


        <div class="spacer">&nbsp;</div>



        @if (Model.LoggedIn)
        {
            <div class="fab">
                <span class="fab-action-button">
                    <i class="fab-action-button__icon"></i>
                </span>
                <ul class="fab-buttons">
                    <li class="fab-buttons__item">
                        <a href="#" class="fab-buttons__link" data-tooltip="Facebook">
                            <i class="icon-material icon-material_fb"></i>
                        </a>
                    </li>
                    <li class="fab-buttons__item">
                        <a href="#" class="fab-buttons__link" data-tooltip="Twitter">
                            <i class="icon-material icon-material_tw"></i>
                        </a>
                    </li>
                    <li class="fab-buttons__item">
                        <a href="#" class="fab-buttons__link" data-tooltip="Linkedin">
                            <i class="icon-material icon-material_li"></i>
                        </a>
                    </li>
                    <li class="fab-buttons__item">
                        <a href="#" class="fab-buttons__link" data-tooltip="Google+">
                            <i class="icon-material icon-material_gp"></i>
                        </a>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="fab">
                <span class="fab-action-button">
                    <a href="#" onclick="document.getElementById('id01').style.display='block'" data-tooltip="ورود کاربر" title="ورود کاربر">
                        <i class="fab-action-button__icon"></i>
                    </a>
                </span>
            </div>

            <!-- The Modal -->
    <div id="id01" class="modal">
        <span onclick="document.getElementById('id01').style.display='none'"
              class="close" title="بستن">&times;</span>

        <!-- Modal Content -->
        <form class="modal-content animate" method="post">
            <div class="imgcontainer">
                <img src="/image/login.png" alt="گنجور" class="avatar">
            </div>
            <table style="width:100%">
                <tr>
                    <td>
                        <span class="inputlabel">پست الکترونیکی: </span>
                    </td>
                    <td>
                        <input type="text" style="text-align:left;direction:ltr;width:100%" placeholder="پست الکترونیکی" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <span class="inputlabel">گذرواژه: </span>
                    </td>
                    <td>
                        <input type="password" id="password"  style="text-align:left;direction:ltr;width:100%" placeholder="گذرواژه" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="submit" style="width:100%;cursor:pointer" id="submit" value="ورود" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <table style="width:100%; margin:0">
                            <tr>
                                <td>
                                    <a href="https://museum.ganjoor.net/signup" target="_blank" style="width:50%; cursor:pointer"><input type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn" style="width:100%;text-align:center;cursor:pointer" value="ثبت نام" /></a>
                                </td>
                                <td>
                                    <input type="button" onclick="document.getElementById('id01').style.display='none'" style="width: 100%; text-align: center; cursor: pointer" value="انصراف" />
                                </td>
                            </tr>
                        </table>
                        
                        
                    </td>
                </tr>


            </table>
            <div><p>خطا</p></div>
        </form>
        
    </div>
        }


    </div>

</div>
