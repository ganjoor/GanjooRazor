                }

                <div class="spacer">&nbsp;</div>
                @{
                    @Html.Raw(Model.GanjoorPage.HtmlText)
                }


            </article>

            @{
                if (Model.IsPoemPage)
                {
                    if (Model.GanjoorPage.Poem.Recitations.Length > 0)
                    {
                        <div class="spacer">&nbsp;</div>
