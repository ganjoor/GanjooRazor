@page
@model GanjooRazor.Pages.ContentModel
@{
    Layout = "Shared/_GanjoorPage";
}



@{
    ViewData["Title"] = $"گنجور &raquo; {Html.Raw(Model.Poet.Poet.Name)}";
    ViewData["BrearCrumpList"] =
        "{" +
"\"@context\": \"http://schema.org\"," +
"\"@type\": \"BreadcrumbList\"," +
"\"itemListElement\": [" +
"{" +
        "\"@type\": \"ListItem\"," +
"\"position\": 1," +
"\"item\": {" +
            $"\"@id\": \"https://ganjoor.net{Html.Raw(Model.Poet.Poet.FullUrl)}/\"," +
$"\"name\": \"{Html.Raw(Model.Poet.Poet.Name)}\"," +
"\"image\": \"https://i.ganjoor.net/poem.png\"" +
"}" +
    "}" +
"]" +
"}";
}


<div class="spacer" style="direction:ltr">@Model.Request.Path</div>


<div id="hdr2" class="clearfix">
    <h1><a href="https://ganjoor.net" title="گنجور"><img src="https://ganjoor.net/img/ganjadabk.gif" alt="گنجور" /></a></h1>

    <div class="actionbox">
        <form action="https://ganjoor.net/index.php" method="get" id="searchhorm">
            <label for="s">جستجو:</label>
            <input type="text" name="s" id="s" class="inputText" size="35" value="" />
            <select name="author" id="author">
                <option value="0" selected="selected">در آثار همه شاعران</option>
                @{
                    foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                    {
                        if (poet.Id == Model.Poet.Poet.Id)
                        {
                            <option value="@poet.Id" selected="selected">@Html.Raw(poet.Name)</option>
                        }
                        else
                        {
                            <option value="@poet.Id">@Html.Raw(poet.Name)</option>
                        }

                    }
                }
            </select>
            <input type="submit" value="بیاب" />
        </form>
    </div> <!-- .actionbox -->


</div><!-- #hdr2 -->


<div id="fa">
    <div id="maincnt">

        <div class="poem" id="post-43207">
            <h2>
                <a href="@Html.Raw(Model.Poet.Poet.FullUrl)" rel="bookmark">
                    @Html.Raw(Model.Poet.Poet.Name)
                </a>
            </h2>
            <div class="spacer">&nbsp;</div>
            <div style="width:82px;margin:auto">
                <a href="@Html.Raw(Model.Poet.Poet.FullUrl)"><img src="https://raw.githubusercontent.com/ganjoor/ganjoorflutter/main/images/poets/@(Model.Poet.Poet.Id).png" alt="@Html.Raw(Model.Poet.Poet.Name)" /></a>
            </div><div style="width:100%;margin:auto"><a href="@Html.Raw(Model.Poet.Poet.FullUrl)">@Html.Raw(Model.Poet.Poet.Name)</a></div><div class="spacer">&nbsp;</div>
            <p>
                @Html.Raw(Model.Poet.Poet.Description)
            </p>

            @{
                foreach (var cat in Model.Poet.Cat.Children)
                {
                    <p><a href=" @Html.Raw(Model.Poet.Poet.FullUrl + "/" + cat.UrlSlug)"> @Html.Raw(cat.Title)</a></p>
                }

                foreach (var poem in Model.Poet.Cat.Poems)
                {
                    <p><a href=" @Html.Raw(Model.Poet.Poet.FullUrl + "/" + poem.UrlSlug)"> @Html.Raw(poem.Title)</a></p>
                }
            }
            

            <div class="spacer">&nbsp;</div>

        </div>

        <div class="helpers">

            <div class="cat">
            </div>

            <div class="com">

            </div>

        </div>




    </div>


</div>