@page
@model GanjooRazor.Pages.ContentModel
@{
    Layout = "Shared/_GanjoorPage";
}



@{
    ViewData["Title"] = $"گنجور &raquo; {Html.Raw(Model.Cat.Poet.Name)}";
    ViewData["BrearCrumpList"] =
        "{" +
"\"@context\": \"http://schema.org\"," +
"\"@type\": \"BreadcrumbList\"," +
"\"itemListElement\": [" +
"{" +
        "\"@type\": \"ListItem\"," +
"\"position\": 1," +
"\"item\": {" +
            $"\"@id\": \"https://ganjoor.net{Html.Raw(Model.Cat.Poet.FullUrl)}/\"," +
$"\"name\": \"{Html.Raw(Model.Cat.Poet.Name)}\"," +
"\"image\": \"https://i.ganjoor.net/poem.png\"" +
"}" +
    "}" +
"]" +
"}";
}


<div id="hdr2" class="clearfix">
    <h1><a href="/" title="گنجور"><img src="/image/ganjadabk.gif" alt="گنجور" /></a></h1>
    <div class="actionbox">
        <form action="https://ganjoor.net/index.php" method="get" id="searchform">
            <input type="text" name="s" id="s" class="inputText" value="" placeholder="جستجو" />
            <select name="author" id="author">
                <option value="0" selected="selected">در آثار همه شاعران</option>
                @{
                    foreach (RMuseum.Models.Ganjoor.ViewModels.GanjoorPoetViewModel poet in Model.Poets)
                    {
                        if (poet.Id == Model.Cat.Poet.Id)
                        {
                            <option value="@poet.Id" selected="selected">@Html.Raw(poet.Name)</option>
                        }
                        else
                        {
                            <option value="@poet.Id">@Html.Raw(poet.Name)</option>
                        }

                    }
                }
            </select>
            @{ 
                if(!Model.PoetPage)
                {
                        <select name="cat" id="cat" style="width:150px">
                            <option value="0">در همه بخشها</option>
                            @{
                                foreach (var gran in Model.Cat.Cat.Ancestors)
                                {
                                    <option value="@Html.Raw(gran.Id)">@Html.Raw(gran.Title)</option>
                                }
                                <option value="@Html.Raw(Model.Cat.Cat.Id)">@Html.Raw(Model.Cat.Cat.Title)</option>

                                foreach (var child in Model.Cat.Cat.Children)
                                {
                                    <option value="@Html.Raw(child.Id)">@Html.Raw(child.Title)</option>
                                }
                            }
                        </select>
                }
            }
                
            <input type="submit" value="بیاب" />
        </form>
    </div><!-- .actionbox -->
</div><!-- #hdr2 -->


<div id="fa">
    <div id="maincnt">

        <div class="poem" id="post-43207">
            <article>
                <h2>
                    @{
                        if (Model.PoemPage)
                        {
                            <a href="@Html.Raw(Model.Poem.FullUrl)" rel="bookmark">
                                @Html.Raw(Model.Poem.Title)
                            </a>
                        }
                        else
                        {
                            <a href="@Html.Raw(Model.Cat.Cat.FullUrl)" rel="bookmark">
                                @Html.Raw(Model.Cat.Cat.Title)
                            </a>
                        }
                    }

                </h2>
                <div class="spacer">&nbsp;</div>
                <div style="width:82px;margin:auto">
                    <a href="@Html.Raw(Model.Cat.Poet.FullUrl)"><img src="https://raw.githubusercontent.com/ganjoor/ganjoorflutter/main/images/poets/@(Model.Cat.Poet.Id).png" alt="@Html.Raw(Model.Cat.Poet.Name)" /></a>
                </div>
                <div style="width:100%;margin:auto">
                    @{
                        foreach (var gran in Model.Cat.Cat.Ancestors)
                        {
                            <a href="@Html.Raw(gran.FullUrl)">@Html.Raw(gran.Title)</a><span> &raquo;</span>
                        }
                        <a href="@Html.Raw(Model.Cat.Cat.FullUrl)">@Html.Raw(Model.Cat.Cat.Title)</a>
                    }

                </div>
                <div class="spacer">&nbsp;</div>
                @{
                    if (Model.PoetPage)
                    {
                        <p>
                            @Html.Raw(Model.Cat.Poet.Description)
                        </p>
                    }

                    if (Model.PoemPage)
                    {
                        @Html.Raw(Model.Poem.HtmlText)
                    }
                }


                @{
                    if (!Model.PoemPage)
                    {
                        foreach (var cat in Model.Cat.Cat.Children)
                        {
                            <p><a href=" @Html.Raw(Model.Cat.Cat.UrlSlug + "/" + cat.UrlSlug)"> @Html.Raw(cat.Title)</a></p>
                        }

                        foreach (var poem in Model.Cat.Cat.Poems)
                        {
                            <p><a href=" @Html.Raw(Model.Cat.Cat.UrlSlug + "/" + poem.UrlSlug)"> @Html.Raw(poem.Title): @Html.Raw(poem.Excerpt) </a></p>
                        }
                    }

                }

            </article>

            @{
                if (Model.PoemPage)
                {
                    if (Model.Poem.Recitations.Length > 0)
                    {
                        <div class="spacer">&nbsp;</div>
                        <div style="width:95%;max-width:500px;margin:auto">
                            <div id="jp_container_1" class="jp-video jp-video-270p">
                                <div class="jp-type-playlist">
                                    <div id="jquery_jplayer_1" class="jp-jplayer"></div>
                                    <div class="jp-gui">
                                        <div class="jp-video-play">
                                            <button class="jp-video-play-icon" tabindex="0">پخش</button>
                                        </div>
                                        <div class="jp-interface">
                                            <div class="jp-progress">
                                                <div class="jp-seek-bar">
                                                    <div class="jp-play-bar"></div>
                                                </div>
                                            </div>
                                            <div class="jp-current-time">&nbsp;</div>
                                            <div class="jp-duration">&nbsp;</div>
                                            <div class="jp-controls-holder" style="width:auto">
                                                <div class="jp-controls">
                                                    <button class="jp-previous" tabindex="0">قبلی</button>
                                                    <button class="jp-play" tabindex="0">پخش</button>
                                                    <button class="jp-next" tabindex="0">بعدی</button>
                                                    <button class="jp-stop" tabindex="0">توقف</button>
                                                </div>
                                                <div class="jp-volume-controls">
                                                    <button class="jp-mute" tabindex="0">بی‌صدا</button>
                                                    <button class="jp-volume-max" tabindex="0">حداکثر صدا</button>
                                                    <div class="jp-volume-bar">
                                                        <div class="jp-volume-bar-value"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="jp-details">
                                                <div class="jp-title">&nbsp;</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="jp-playlist">
                                        <ul>
                                            <!-- The method Playlist.displayPlaylist() uses this unordered list -->
                                            <li>&nbsp;</li>
                                        </ul>
                                    </div>
                                    <div class="jp-no-solution">
                                        <span>نیاز به بروزآوری</span>
                                        جهت خوانش شعر شما یا باید از مرورگر جدیدی همچون <a href="http://getfirefox.com/">فایرفاکس</a> استفاده کنید یا افزونه <a href="http://get.adobe.com/flashplayer/" target="_blank">فلش</a> مرورگرتان را بروزآوری کنید.
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }


            @{
                if (Model.CatPage)
                {
                    <nav>
                        <div class="spacer">&nbsp;</div>
                        <div class="navigation">
                            <div class="navleft">
                                @if (Model.Cat.Cat.Next != null)
                                {
                                    <a href="@Html.Raw(Model.Cat.Cat.Next.UrlSlug)">@Html.Raw(Model.Cat.Cat.Next.Title)</a><span> &raquo;</span>
                                }
                            </div>
                            <div class="navright">
                                @if (Model.Cat.Cat.Previous != null)
                                {
                                    <span>&laquo; </span><a href="@Html.Raw(Model.Cat.Cat.Previous.UrlSlug)">@Html.Raw(Model.Cat.Cat.Previous.Title)</a>
                                }
                            </div>
                        </div>
                    </nav>
                }

                if (Model.PoemPage)
                {

                    <nav>
                        <div class="spacer">&nbsp;</div>
                        <div class="navigation">
                            <div class="navleft">
                                @if (Model.Poem.Next != null)
                                {
                                    <a href="@Html.Raw(Model.Poem.Next.UrlSlug)">@Html.Raw(Model.Poem.Next.Title): @Html.Raw(Model.Poem.Next.Excerpt)</a><span> &raquo;</span>
                                }
                            </div>
                            <div class="navright">
                                @if (Model.Poem.Previous != null)
                                {
                                    <span>&laquo; </span><a href="@Html.Raw(Model.Poem.Previous.UrlSlug)">@Html.Raw(Model.Poem.Previous.Title) :@Html.Raw(Model.Poem.Previous.Excerpt)</a>
                                }
                            </div>
                        </div>
                    </nav>

                    <div id="comments">
                        <p>
                            <small>🖰 با دو بار کلیک روی واژه‌ها یا انتخاب متن و کلیک روی آنها می‌توانید آنها را در لغتنامهٔ دهخدا جستجو کنید.</small>
                        </p>
                        <p>
                            <small>🖐 <a href="#" onclick="javascript:btshmr()">شماره‌گذاری ابیات</a></small>
                            | <small>منبع اولیه: <a href="https://ganjoor.net/sources/sj/">سیاوش جعفری</a></small> | <small><a href="http://www.facebook.com/sharer.php?u=https://ganjoor.net/onsori/oghat/sh9/&amp;t=%D8%B4%D9%85%D8%A7%D8%B1%D9%87%D9%94+%DB%B9/">ارسال به فیس‌بوک</a></small>
                        </p>
                        <h3>این شعر را چه کسی در کدام آهنگ خوانده است؟</h3>
                        <p>🎜 <small><a href="https://ganjoor.net/spotify/?p=68936" onclick="wpopen(this.href); return false" class="comments-link">معرفی آهنگهایی که در متن آنها از این شعر استفاده شده است</a> ...</small></p>
                        <p>
                            <small>📷 <a href="?pinterest_url=manual" onclick="wpopen(this.href); return false" class="comments-link">پیشنهاد تصاویر مرتبط از منابع اینترنتی</a>، 📖 <a href="http://blog.ganjoor.net/1398/07/12/mganjoor/" target="_blank">راهنمای نحوهٔ پیشنهاد تصاویر مرتبط از گنجینهٔ گنجور</a></small>
                        </p>
                        <h3>حاشیه‌ها</h3>
                        <p>

                            تا به حال حاشیه‌ای برای این شعر نوشته نشده است. <a href="https://ganjoor.net/?comments_popup=68936" onclick="wpopen(this.href); return false" class="comments-link" title="Comment on شمارهٔ ۹">💬 شما حاشیه بگذارید ...</a>
                        </p>
                    </div> <!-- <div id="comments"> -->
                }



            }


            <div class="spacer">&nbsp;</div>

        </div>

